{
  "name": "typed-bbcode-to-html",
  "version": "0.1.2",
  "description": "Convert BBCode (bulletin board code) into HTML",
  "keywords": [
    "bbcode",
    "html",
    "converter"
  ],
  "author": "Beeno Tung <aabbcc1241@yahoo.com.hk> (https://beeno-tung.surge.sh)",
  "license": "BSD-2-Clause",
  "main": "dist/bbcode.js",
  "types": "dist/bbcode.d.ts",
  "scripts": {
    "test": "npm run rawtest",
    "clean": "rimraf dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "postformat": "tslint -p . --fix",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.build.json",
    "pretest": "npm run format && npm run build",
    "rawtest": "ts-node test/bbcode-test.ts",
    "prepublishOnly": "npm run rawtest && npm run build"
  },
  "husky": {
    "hook": {
      "pre-commit": "npm run format"
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/node": "*",
    "husky": "^4.2.5",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-node": "^8.8.2",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-etc": "^1.10.1",
    "typescript": "^3.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beenotung/typed-bbcode-to-html.git"
  },
  "bugs": {
    "url": "https://github.com/beenotung/typed-bbcode-to-html/issues"
  },
  "homepage": "https://github.com/beenotung/typed-bbcode-to-html#readme"
}
